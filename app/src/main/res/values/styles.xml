<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/c_c</item>
        <item name="android:background">#ffff00</item>
    </style>

    <style name="cgpa">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/cgpa</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:padding">11dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="credits">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/credit</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:padding">11dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>


    <style name="edit1">
        <item name="android:layout_width">99dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">0.0</item>
    </style>


    <style name="edit2">
        <item name="android:layout_width">89dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">0.0</item>
    </style>

    <style name="ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#FF6F61</item>
    </style>

    <style name="AppTheme.poptheme" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
